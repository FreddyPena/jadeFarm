<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

    <!--Permite usar entre otras la anotaciÃ³n @Autowired -->
    <context:annotation-config/>
    <!--Permite usar entre otras las anotaciones @Component y @Controller -->
    <context:component-scan base-package="com.jadesoft"/>
    <context:component-scan base-package="com.js"/>
    
    <!--Controllers -->
    <bean class="com.js.shared.utils.HibernateUtil" factory-method="getSessionFactory"  />
    <bean class="com.js.inv.persistences.controller.FamiliaDAOHibernate" />      
    <bean class="com.js.inv.persistences.controller.MarcaDAOHibernate" />      
    <bean class="com.js.inv.persistences.controller.ClasArticuloDAOHibernate" />    
    <bean class="com.js.inv.persistences.controller.RenglonDAOHibernate" />      
    <bean class="com.js.inv.persistences.controller.AlmacenDAOHibernate" />           
    
    <!---Singleton -->
    <bean class="com.jadesoft.jadelib.generales.KeyEventDespachador" />  
    <bean class="com.jadesoft.jadelib.displacement.DisplacementObject" />  
  

</beans>
